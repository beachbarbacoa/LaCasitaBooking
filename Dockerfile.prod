# Build stage
FROM node:20-slim AS builder
WORKDIR /app
COPY wasp-core/package*.json ./
RUN npm install
COPY wasp-core/ ./
RUN npm run build

# Production stage
FROM node:20-slim
WORKDIR /app
COPY --from=builder /app/build ./
COPY --from=builder /app/node_modules ./node_modules
ENV NODE_ENV production
EXPOSE 3000
CMD ["node", "server.js"]